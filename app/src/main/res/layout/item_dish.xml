<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название блюда"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDishType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип"
        android:textSize="14sp"
        android:layout_below="@id/tvDishName" />

    <TextView
        android:id="@+id/tvDishCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Калории"
        android:textSize="14sp"
        android:layout_below="@id/tvDishType" />

    <!-- Добавьте TextView для отображения описания -->
    <TextView
        android:id="@+id/tvDishDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:textSize="14sp"
        android:layout_below="@id/tvDishCalories"
        android:layout_marginTop="8dp" />

</LinearLayout>
